<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="layout.ReportFragment">

    <!-- TODO: Update blank fragment layout -->



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7cf9f6f6"
        >

        <LinearLayout
            android:id="@+id/GVR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btTPP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@raw/bb"
                    android:textColor="#FFFF"
                    android:textStyle="italic"
                    android:layout_weight="1.0"
                    android:textSize="20sp"
                    android:text="Today's Produc.."
                    />
                <Button
                    android:id="@+id/btRP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@raw/bb"
                    android:textColor="#FFFF"
                    android:textStyle="italic"
                    android:layout_weight="1.0"
                    android:textSize="20sp"
                    android:text="Running Month"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btTPT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@raw/bb"
                    android:textColor="#FFFF"
                    android:textStyle="italic"
                    android:layout_weight="1.0"
                    android:text="Today's Summary"
                    android:textSize="20sp"
                    />
                <Button
                    android:id="@+id/btMW"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@raw/bb"
                    android:textColor="#FFFF"
                    android:textStyle="italic"
                    android:layout_weight="1.0"
                    android:text="Month Wise"
                    android:textSize="20sp"
                    />


            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/reportTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/GVR"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <include
                        android:id="@+id/tableinfo"
                        layout="@layout/table"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"/>
                </HorizontalScrollView>
            </ScrollView>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/RRinREPORT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="-10dp"
            android:layout_below="@+id/GVR"
            >


            <ListView
                android:layout_marginTop="10dp"
                android:id="@+id/reportListView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:divider="#00ffffff"
                >
            </ListView>

        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_format_align_justify_black_24dp"
            android:layout_marginLeft="10dp"
            app:fabSize="mini"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/fab_margin"
            />
        <LinearLayout
            android:id="@+id/LLRM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/GVR"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFF"
                android:layout_marginTop="15dp"
                android:text="Select The Date for Running Month "
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <TextView
                android:id="@+id/btRMDtDF"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:layout_marginTop="10dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColorHint="#050505"
                android:textColor="#050505"
                android:background="@color/colorAccent"
                android:textStyle="bold|italic"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:hint="Form\nYYYY-MM-DD"/>

            <TextView
                android:id="@+id/btDtdT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:textColorHint="#050505"
                android:textColor="#050505"
                android:background="@color/colorAccent"
                android:layout_marginTop="10dp"

                android:hint="TO\nYYYY-MM-DD"
                android:textStyle="bold|italic"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:layout_marginRight="10dp"/>



            <ImageButton
                android:id="@+id/ibRMDS"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_search__24dp"
                android:background="@color/colorAccent"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>

        </LinearLayout>
            <LinearLayout
                android:id="@+id/piker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                >
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    />

                <NumberPicker
                    android:id="@+id/dpF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    >
                </NumberPicker>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    />
                <ImageButton
                    android:id="@+id/set"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_done_black_24dp"
                    android:background="#0cd731"
                    android:layout_weight="1.0"
                    android:layout_gravity="center"
                    />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBarReport"
        style="@android:style/Widget.Holo.Light.ProgressBar.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_centerVertical="true" />



</RelativeLayout>
